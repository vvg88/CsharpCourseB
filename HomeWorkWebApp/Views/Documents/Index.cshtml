@model IEnumerable<HomeWorkWebApp.Models.Document>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<form method="get">
    <input type="text" name="searchString"/>
    <input type="submit" value="Search"/>
</form>
<br/>
<table class="table">
    <tr>
        <th>
            @ViewBag.Message
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @MvcHtmlString.Create(item.Text)
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
